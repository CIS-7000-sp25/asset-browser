{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*",
    "src",            // Your main source files
    "env.d.ts",       // If you have env type definitions
    "astro-env.d.ts", // Astro auto-generated env definitions
    "types/**/*.d.ts" // If you keep custom types in a separate folder
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "baseUrl": ".", // required for "paths" to work
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}